{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": false,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": false,
    "verbatimModuleSyntax": false,
    "moduleDetection": "auto"
  },
  "include": ["src/**/*"]
}